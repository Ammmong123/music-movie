/* pages/movies/movie.wxss */
@import "/pages/movies/movieList-template/movieList-template.wxss";
@import "/pages/movies/amovie-template/amovie-template.wxss";
.movie-container{
    margin-bottom: 30rpx;
    background-color: #fff;
}
.container{
    background-color:#f2f2f2;
}

.search{
    background-color: #f2f2f2;
    height: 80rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
}
.placeholder{
    font-size: 28rpx;
    color: #d1d1d1;
}

.search input{
    margin-left: 40rpx;
    height: 100%;
    width: 500rpx;
    font-size: 28rpx;
}

.search-icon{
  margin-left: 30rpx;
}

.moremovie-container{
    margin: 30rpx auto;
    padding: 0;
}

.search-list{
    margin: 0;
   
    float: left;
    padding: 30rpx 0;
}
.cancelImg{
    width: 40rpx;
    height: 40rpx;
    margin-right: 30rpx;
}