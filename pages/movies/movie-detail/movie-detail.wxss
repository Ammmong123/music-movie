/* pages/movies/movie-detail/movie-detail.wxss */
@import "/pages/movies/star-template/star-template.wxss";

.movie-detail {
    display: flex;
    flex-direction: column;
}

.head-image-back {
    width: 100%;
    height: 320rpx;
    filter: blur(10px);
}

.head-content {
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}

.head-title {
    font-size: 19px;
    color: #fff;
    font-weight: bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}

.head-time {
    margin: 35rpx 0 35rpx 40rpx;
    font-size: 28rpx;
    color: #fff;
}

.head-commit {
    display: flex;
    flex-direction: row;
    margin-bottom: 20rpx;
}

.head-commit text {
    color: rgba(247, 128, 128, 0.4);
    font-size: 22rpx;
    margin-right: 10rpx;
    margin-left: 30rpx;
}

.head-commit .head-userNum {
    color: #f21146;
}

.summary {
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-direction: column;
    padding: 30rpx 30rpx;
}

.summary text {
    color: #1f3463;
    margin-left: 10rpx;
    margin-right: 20rpx;
}

.viewer {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin: 10rpx 0;
}

.summary-text {
    color: #999;
}

.summary-title {
    color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.synopsis {
    width: 100%;
    border-top: 1px solid #999;
    padding: 30rpx 30rpx;
}

.synopsis text {
    margin-top: 20rpx;
    margin-right: 40rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
}

.cast {
    border-top: 1px solid #999;
    width: 100%;
    display: flex;
    flex-direction: column;
    padding: 30rpx;
}

.cast-font {
    color: #999;
    margin-bottom: 40rpx;
}

.cast-container{
    display:inline-flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    margin-right: 40rpx;
    width: 170rpx;
    text-align:center;
    white-space: normal;
}

.cast-imgs{
    white-space: nowrap;
}

.cast-img{
    width: 170rpx;
    height: 210rpx;
}
.cast-name{
    margin: 10rpx auto 0;
}

