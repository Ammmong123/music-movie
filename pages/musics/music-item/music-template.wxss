/* pages/musics/music-item/music-template.wxss */


.post-container{
    display: flex;
    flex-direction: column;
    margin: 20rpx 0 40rpx 0;
    background-color: #fff;
    border-bottom: 1px solid #b6babb;
    border-top: 1px solid #b6babb;
    padding: 5px 0;
}

.post-container .post-author-date{
    margin: 10rpx 10rpx 20rpx 10rpx;
}

.post-container .post-author-date image{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}

.post-container .post-author-date text{
    margin-left: 15rpx;
    vertical-align: middle;
    font-size: 26rpx;
}

.post-container .post-image{
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15rpx;
}

.post-container .post-content{
    color: #666;
    font-size: 28rpx;
    margin: 20rpx;
    line-height: 40rpx;
    letter-spacing: 2rpx;
    text-indent: 56rpx;
}
.post-container .post-like-view image{
    height: 20rpx;
    width: 20rpx;
    margin: 0 5rpx;
    vertical-align: middle;
}

.post-container .post-like-view text{
    margin-right: 15rpx;
    font-size: 20rpx;
}