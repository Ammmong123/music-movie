<!--pages/musics/music-item/music-template.wxml-->
<template name="musicContent">
    <view class='post-container'>
        <view class='post-author-date'>
            <image src='{{item.avatar}}'></image>
            <text>{{item.date}}</text>
        </view>
        <image class='post-image' src='{{item.headImgSrc}}'></image>
        <text class='post-content'>{{item.content}}</text>
        <view class='post-like-view'>
            <image src='/images/icon/chat.png'></image>
            <text>{{item.collection}}</text>
            <image src='/images/icon/view.png'></image>
            <text>{{item.reading}}</text>
        </view>
    </view>
</template>